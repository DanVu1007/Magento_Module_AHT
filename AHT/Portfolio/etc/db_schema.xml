<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="dan_portfolio" resource="default" engine="innodb" comment="Table comment">
        <column xsi:type="int" name="danPort_id" padding="11" unsigned="true" identity="true" comment=""/>
        <column xsi:type="varchar" name="name" nullable="true" default="name 0-" comment=""/>
        <column xsi:type="varchar" name="content" nullable="true" default="content 0-" comment=""/>
        <column xsi:type="timestamp" name="created_at" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="danPort_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERENCE_ID">
            <column name="danPort_id"/>
        </constraint>
