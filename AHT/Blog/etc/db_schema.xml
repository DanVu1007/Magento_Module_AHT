<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="blog" resource="default" engine="innodb" comment="Blog">
        <column name="blog_id" xsi:type="int" padding="11" unsigned="true" nullable="false" identity="true" comment=""/>
        <column name="name" xsi:type="varchar" nullable="false" default="Blog name: 00" comment=""/>
        <column name="status" xsi:type="int" unsigned="true" nullable="false" default="1" comment=""/>
        <column name="image" xsi:type="varchar" nullable="false" default="0" comment=""/>
        <column name="short_description" xsi:type="varchar" nullable="true" default="Short description about this blog" comment=""/>
        <column name="description" xsi:type="varchar" nullable="true" default="Description about this blog" comment=""/>
        <column name="tag" xsi:type="varchar" nullable="true" default="tag 0" comment=""/>
        <column name="category_ids" xsi:type="varchar" nullable="true" comment=""/>
        <column name="url" xsi:type="varchar" nullable="false" default="AHT/Blog/id/0" comment=""/>
        <column name="author" xsi:type="varchar" nullable="true" default="Author's name" comment=""/>
        <column name="public_day" xsi:type="timestamp" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>
        <column name="created_at" xsi:type="timestamp" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>
        <column name="updated_at" xsi:type="timestamp" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="blog_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERENCE_ID">
            <column name="blog_id"/>
        </constraint>
        <!--  <index referenceId="INDEX_REFERENCE_ID" indexType="btree">
            <column name="blog_id"/>
        </index>  -->
    </table>
    <table name="blog_category" resource="default" engine="innodb" comment="Blog">
        <column name="blog_category_id" xsi:type="int" padding="11" unsigned="true" nullable="false" identity="true" comment=""/>
        <column name="name" xsi:type="varchar" nullable="false" default="Blog name: 00" comment=""/>
        <column name="parent_cate_id" xsi:type="int" unsigned="true" nullable="false" default="0" comment=""/>
        <column name="created_at" xsi:type="timestamp" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>
        <column name="updated_at" xsi:type="timestamp" nullable="true" default="CURRENT_TIMESTAMP" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="blog_category_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERENCE_ID">
            <column name="blog_category_id"/>
        </constraint>
        <!--  <index referenceId="INDEX_REFERENCE_ID" indexType="btree">
            <column name="blog_id"/>
        </index>  -->
    </table>
    <table name="blog_category_connect" resource="default" engine="innodb" comment="Blog">
        <column name="blog_category_connect_id" xsi:type="int" padding="11" unsigned="true" nullable="false" identity="true" comment=""/>
        <column name="blog_id" xsi:type="int" padding="11" unsigned="true" comment=""/>
        <column name="blog_category_id" xsi:type="int" padding="11" unsigned="true" comment=""/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="blog_category_connect_id"/>
        </constraint>
    </table>
</schema>