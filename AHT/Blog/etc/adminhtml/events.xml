<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="blog_save_after">
        <observer name="blog_aftersave_connect" instance="AHT\Blog\Observer\Saveconnect" />
    </event>
    <event name="blog_save_before">
        <observer name="blog_before_save" instance="AHT\Blog\Observer\BeforeSaveBlog" />
    </event>
    <event name="blog_category_save_before">
        <observer name="blog_category_before_save" instance="AHT\Blog\Observer\BeforeSaveCate" />
    </event>




</config>