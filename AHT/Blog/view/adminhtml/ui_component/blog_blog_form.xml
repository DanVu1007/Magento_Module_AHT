<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">blog_blog_form.blog_blog_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="AHT\Blog\Block\Adminhtml\Blog\Edit\BackButton"/>
            <button name="delete" class="AHT\Blog\Block\Adminhtml\Blog\Edit\DeleteButton"/>
            <button name="save" class="AHT\Blog\Block\Adminhtml\Blog\Edit\SaveButton"/>
            <button name="save_and_continue" class="AHT\Blog\Block\Adminhtml\Blog\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>blog_blog_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>blog_blog_form.blog_blog_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="blog_blog_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider name="blog_blog_listing_data_source" class="AHT\Blog\Model\Blog\DataProvider">
            <settings>
                <requestFieldName>blog_id</requestFieldName>
                <primaryFieldName>blog_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>General</label>
        </settings>


        <!-- Status -->
        <field name="status" sortOrder="0" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">status</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <!-- name -->
        <field name="name" formElement="input" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="string">false</rule>
                </validation>
            </settings>
        </field>

        <!-- CATEGORY -->







        <field name="category_ids" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Belong to categories</label>
                <dataScope>category_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="AHT\Blog\Model\Config\Source\Selectcategoryblog"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>




















        <!-- CATEGORY -->


        <!-- url key -->
        <field name="url_key" formElement="input" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL key</label>
                <dataScope>url_key</dataScope>
                <validation>
                    <!-- <rule name="required-entry" xsi:type="string">false</rule> -->
                </validation>
            </settings>
        </field>

        <!-- image -->
        <field name="image" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">actionuic</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Image</label>
                <dataScope>image</dataScope>
                <validation>
                    <!-- <rule name="required-entry" xsi:type="string">false</rule> -->
                </validation>
            </settings>
        </field>
        <!-- tag -->
        <field name="tag" formElement="input" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Actionuic</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Tag</label>
                <dataScope>tag</dataScope>
                <validation>
                    <!-- <rule name="required-entry" xsi:type="string">false</rule> -->
                </validation>
            </settings>
        </field>
        <!-- author -->
        <field name="author" formElement="input" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Actionuic</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Author</label>
                <dataScope>author</dataScope>
                <validation>
                    <!-- <rule name="required-entry" xsi:type="string">false</rule> -->
                </validation>
            </settings>
        </field>
    </fieldset>

    <fieldset name="content" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Content</label>
        </settings>

        <!-- short_description -->
        <field name="short_description" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Actionuic</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Short Description</label>
                <dataScope>short_description</dataScope>
                <validation>
                    <!-- <rule name="required-entry" xsi:type="string">false</rule> -->
                </validation>
            </settings>
        </field>
        <!-- description -->
        <field name="description" formElement="wysiwyg" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">description</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <label/>
                <dataScope>description</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>

    </fieldset>
</form>