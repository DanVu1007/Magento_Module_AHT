<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">blog_blogcategory_form.blog_blogcategory_listing_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="AHT\Blog\Block\Adminhtml\Blogcategory\Edit\BackButton"/>
			<button name="delete" class="AHT\Blog\Block\Adminhtml\Blogcategory\Edit\DeleteButton"/>
			<button name="save" class="AHT\Blog\Block\Adminhtml\Blogcategory\Edit\SaveButton"/>
			<button name="save_and_continue" class="AHT\Blog\Block\Adminhtml\Blogcategory\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>blog_blogcategory_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>blog_blogcategory_form.blog_blogcategory_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="blog_blogcategory_listing_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="blog_blogcategory_listing_data_source" class="AHT\Blog\Model\Blogcategory\DataProvider">
			<settings>
				<requestFieldName>blog_category_id</requestFieldName>
				<primaryFieldName>blog_category_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="name" formElement="textarea" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Blogcategory</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>


		<field name="parent_cate_id" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Blogcategory</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">parent_cate_id</label>
				<dataScope>parent_cate_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>


	</fieldset>
</form>