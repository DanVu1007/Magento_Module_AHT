<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">actionuic_actionuic_form.actionuic_actionuic_listing_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="AHT\Actionuic\Block\Adminhtml\Actionuic\Edit\BackButton"/>
			<button name="delete" class="AHT\Actionuic\Block\Adminhtml\Actionuic\Edit\DeleteButton"/>
			<button name="save" class="AHT\Actionuic\Block\Adminhtml\Actionuic\Edit\SaveButton"/>
			<button name="save_and_continue" class="AHT\Actionuic\Block\Adminhtml\Actionuic\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>actionuic_actionuic_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>actionuic_actionuic_form.actionuic_actionuic_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource name="actionuic_actionuic_listing_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="actionuic_actionuic_listing_data_source" class="AHT\Actionuic\Model\Actionuic\DataProvider">
			<settings>
				<requestFieldName>uic_id</requestFieldName>
				<primaryFieldName>uic_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<!-- Status -->
		<field name="status" sortOrder="10" formElement="checkbox">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">status</item>
					<item name="default" xsi:type="number">1</item>
				</item>
			</argument>
			<settings>
				<dataType>boolean</dataType>
				<label translate="true">Enable</label>
				<dataScope>status</dataScope>
			</settings>
			<formElements>
				<checkbox>
					<settings>
						<valueMap>
							<map name="false" xsi:type="number">0</map>
							<map name="true" xsi:type="number">1</map>
						</valueMap>
						<prefer>toggle</prefer>
					</settings>
				</checkbox>
			</formElements>
		</field>

		<!-- name -->
		<field name="name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">actionuic</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="string">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
	<fieldset name="more_detail">
		<settings>
			<collapsible>true</collapsible>
			<label>More Detail</label>
		</settings>
		<!-- url key -->
		<field name="url_key" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Actionuic</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">URL key</label>
				<dataScope>url_key</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="string">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>

	<fieldset name="content" sortOrder="10">
		<settings>
			<collapsible>true</collapsible>
			<label translate="true">Content</label>
		</settings>

		<!-- short_description -->
		<field name="short_description" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Actionuic</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Short Description</label>
				<dataScope>short_description</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="string">false</rule>
				</validation>
			</settings>
		</field>
		<!-- description -->
		<field name="description" formElement="wysiwyg" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">description</item>
				</item>
			</argument>
			<settings>
				<additionalClasses>
					<class name="admin__field-wide">true</class>
				</additionalClasses>
				<label/>
				<dataScope>description</dataScope>
			</settings>
			<formElements>
				<wysiwyg>
					<settings>
						<wysiwyg>true</wysiwyg>
					</settings>
				</wysiwyg>
			</formElements>
		</field>
	</fieldset>
</form>